---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
---

<Layout>
    <main>
        <Navbar />
        
        <!-- Hero Section con Formulario -->
        <section class="bg-gray-50 min-h-screen py-8">
            <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
                <!-- Título principal -->
                <div class="text-center mb-8">
                    <h1 class="text-3xl font-bold text-gray-900 mb-2">Molienda</h1>
                    <p class="text-gray-600">Procesa el material plástico seleccionado</p>
                </div>

                <!-- Formulario -->
                <div class="bg-white rounded-lg shadow-lg p-8">
                    <form class="space-y-8">
                        <!-- Lote a moler -->
                        <div>
                            <label for="lote_moler" class="block text-sm font-medium text-gray-700 mb-2">Lote a moler</label>
                            <select 
                                id="lote_moler" 
                                name="lote_moler"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 outline-none transition-colors bg-white"
                            >
                                <option value="">Selecciona el lote a procesar</option>
                                <option value="001">001 - Botellas PET Coca-Cola (150 kg)</option>
                                <option value="002">002 - Envases HDPE Detergente (85 kg)</option>
                                <option value="003">003 - Contenedores PP Yogurt (220 kg)</option>
                                <option value="004">004 - Bolsas LDPE Supermercado (45 kg)</option>
                                <option value="005">005 - Vasos PS Desechables (75 kg)</option>
                            </select>
                        </div>

                        <!-- Peso de entrada -->
                        <div>
                            <label for="peso_entrada" class="block text-sm font-medium text-gray-700 mb-2">Peso de entrada</label>
                            <input 
                                type="text" 
                                id="peso_entrada" 
                                name="peso_entrada" 
                                placeholder="22 kg"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 outline-none transition-colors bg-gray-50"
                                readonly
                            >
                        </div>

                        <!-- Peso de salida -->
                        <div>
                            <label for="peso_salida" class="block text-sm font-medium text-gray-700 mb-2">Peso de salida</label>
                            <input 
                                type="number" 
                                id="peso_salida" 
                                name="peso_salida" 
                                placeholder="Ingresa el peso de salida (kg)"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 outline-none transition-colors"
                                min="0"
                                step="0.01"
                            >
                        </div>

                        <!-- Merma -->
                        <div class="flex items-center space-x-3">
                            <label class="text-sm font-medium text-gray-700">Merma:</label>
                            <span id="merma_display" class="text-lg font-semibold text-red-600">1.33 kg</span>
                        </div>

                        <!-- Imágenes de molienda -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-4">Imágenes de molienda</label>
                            <div class="grid grid-cols-2 sm:grid-cols-3 gap-4">
                                <!-- Espacio 1 -->
                                <div class="aspect-square border-2 border-dashed border-gray-300 rounded-lg flex flex-col items-center justify-center hover:border-green-500 transition-colors cursor-pointer bg-gray-50">
                                    <input type="file" accept="image/*" class="hidden" id="molienda_image1">
                                    <svg class="w-8 h-8 text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                                    </svg>
                                    <span class="text-sm text-gray-500">Subir imagen</span>
                                </div>
                                
                                <!-- Espacio 2 -->
                                <div class="aspect-square border-2 border-dashed border-gray-300 rounded-lg flex flex-col items-center justify-center hover:border-green-500 transition-colors cursor-pointer bg-gray-50">
                                    <input type="file" accept="image/*" class="hidden" id="molienda_image2">
                                    <svg class="w-8 h-8 text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                                    </svg>
                                    <span class="text-sm text-gray-500">Subir imagen</span>
                                </div>
                                
                                <!-- Espacio 3 -->
                                <div class="aspect-square border-2 border-dashed border-gray-300 rounded-lg flex flex-col items-center justify-center hover:border-green-500 transition-colors cursor-pointer bg-gray-50">
                                    <input type="file" accept="image/*" class="hidden" id="molienda_image3">
                                    <svg class="w-8 h-8 text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                                    </svg>
                                    <span class="text-sm text-gray-500">Subir imagen</span>
                                </div>
                                
                                <!-- Espacio 4 -->
                                <div class="aspect-square border-2 border-dashed border-gray-300 rounded-lg flex flex-col items-center justify-center hover:border-green-500 transition-colors cursor-pointer bg-gray-50">
                                    <input type="file" accept="image/*" class="hidden" id="molienda_image4">
                                    <svg class="w-8 h-8 text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                                    </svg>
                                    <span class="text-sm text-gray-500">Subir imagen</span>
                                </div>
                                
                                <!-- Espacio 5 -->
                                <div class="aspect-square border-2 border-dashed border-gray-300 rounded-lg flex flex-col items-center justify-center hover:border-green-500 transition-colors cursor-pointer bg-gray-50">
                                    <input type="file" accept="image/*" class="hidden" id="molienda_image5">
                                    <svg class="w-8 h-8 text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                                    </svg>
                                    <span class="text-sm text-gray-500">Subir imagen</span>
                                </div>
                                
                                <!-- Espacio 6 -->
                                <div class="aspect-square border-2 border-dashed border-gray-300 rounded-lg flex flex-col items-center justify-center hover:border-green-500 transition-colors cursor-pointer bg-gray-50">
                                    <input type="file" accept="image/*" class="hidden" id="molienda_image6">
                                    <svg class="w-8 h-8 text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                                    </svg>
                                    <span class="text-sm text-gray-500">Subir imagen</span>
                                </div>
                            </div>
                        </div>

                        <!-- Botones -->
                        <div class="flex flex-col sm:flex-row gap-4 pt-6">
                            <button 
                                type="button"
                                class="flex-1 px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors font-medium"
                            >
                                Regresar
                            </button>
                            <button 
                                type="submit"
                                class="flex-1 px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors font-medium"
                            >
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </main>
</Layout>

<script>
    // Datos de los lotes con sus pesos
    const loteData = {
        "001": { peso: 150, nombre: "Botellas PET Coca-Cola" },
        "002": { peso: 85, nombre: "Envases HDPE Detergente" },
        "003": { peso: 220, nombre: "Contenedores PP Yogurt" },
        "004": { peso: 45, nombre: "Bolsas LDPE Supermercado" },
        "005": { peso: 75, nombre: "Vasos PS Desechables" }
    };

    document.addEventListener('DOMContentLoaded', function() {
        const loteSelect = document.getElementById('lote_moler');
        const pesoEntradaInput = document.getElementById('peso_entrada');
        const pesoSalidaInput = document.getElementById('peso_salida');
        const mermaDisplay = document.getElementById('merma_display');

        // Manejar cambio de lote seleccionado
        loteSelect?.addEventListener('change', function() {
            const selectedLote = this.value;
            if (selectedLote && loteData[selectedLote]) {
                pesoEntradaInput.value = `${loteData[selectedLote].peso} kg`;
                calcularMerma();
            } else {
                pesoEntradaInput.value = '';
                mermaDisplay.textContent = '0 kg';
            }
        });

        // Manejar cambio en peso de salida
        pesoSalidaInput?.addEventListener('input', calcularMerma);

        function calcularMerma() {
            const loteSeleccionado = loteSelect?.value;
            const pesoSalida = parseFloat(pesoSalidaInput?.value) || 0;
            
            if (loteSeleccionado && loteData[loteSeleccionado] && pesoSalida > 0) {
                const pesoEntrada = loteData[loteSeleccionado].peso;
                const merma = pesoEntrada - pesoSalida;
                mermaDisplay.textContent = `${merma.toFixed(2)} kg`;
                
                // Cambiar color según si hay ganancia o pérdida
                if (merma > 0) {
                    mermaDisplay.className = 'text-lg font-semibold text-red-600';
                } else if (merma < 0) {
                    mermaDisplay.className = 'text-lg font-semibold text-green-600';
                } else {
                    mermaDisplay.className = 'text-lg font-semibold text-gray-600';
                }
            } else {
                mermaDisplay.textContent = '0 kg';
                mermaDisplay.className = 'text-lg font-semibold text-gray-600';
            }
        }

        // Script para manejar la carga de imágenes
        for (let i = 1; i <= 6; i++) {
            const fileInput = document.getElementById(`molienda_image${i}`);
            const container = fileInput?.parentElement;
            
            container?.addEventListener('click', function() {
                fileInput.click();
            });
            
            fileInput?.addEventListener('change', function(e) {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        if (container) {
                            container.innerHTML = `
                                <img src="${e.target.result}" alt="Imagen de molienda" class="w-full h-full object-cover rounded-lg">
                                <div class="absolute inset-0 bg-black bg-opacity-0 hover:bg-opacity-20 transition-all duration-200 rounded-lg flex items-center justify-center">
                                    <span class="text-white opacity-0 hover:opacity-100 transition-opacity duration-200">Cambiar imagen</span>
                                </div>
                            `;
                            container.classList.add('relative', 'overflow-hidden');
                            container.classList.remove('border-dashed', 'bg-gray-50');
                        }
                    };
                    reader.readAsDataURL(file);
                }
            });
        }
    });
</script>