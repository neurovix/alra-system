---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
---

<Layout>
    <main class="bg-green-50 min-h-screen">
        <Navbar />
        <section class="flex items-center justify-center py-12 px-4">
            <div class="w-full max-w-lg bg-white rounded-2xl shadow-lg p-8 border-t-8 border-green-600">
                <h1 class="text-3xl font-bold text-green-700 text-center mb-6">Registro de Nuevo Cliente</h1>
                
                <form action="#" method="POST" class="space-y-6">
                    <!-- Nombre -->
                    <div>
                        <label for="nombre" class="block text-sm font-medium text-green-800">Nombre</label>
                        <input type="text" id="nombre" name="nombre" required
                            class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 p-3" />
                    </div>

                    <!-- Apellidos -->
                    <div>
                        <label for="apellidos" class="block text-sm font-medium text-green-800">Apellidos</label>
                        <input type="text" id="apellidos" name="apellidos" required
                            class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 p-3" />
                    </div>

                    <!-- Email -->
                    <div>
                        <label for="email" class="block text-sm font-medium text-green-800">Correo Electrónico</label>
                        <input type="email" id="email" name="email" required
                            class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 p-3" />
                    </div>

                    <!-- Teléfono -->
                    <div>
                        <label for="telefono" class="block text-sm font-medium text-green-800">Teléfono</label>
                        <input type="tel" id="telefono" name="telefono" required
                            class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 p-3" />
                    </div>

                    <!-- Empresa -->
                    <div>
                        <label for="empresa" class="block text-sm font-medium text-green-800">Nombre de la Empresa</label>
                        <input type="text" id="empresa" name="empresa"
                            class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 p-3" />
                    </div>

                    <!-- Botón -->
                    <div class="flex justify-center">
                        <button type="submit"
                            class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-6 rounded-lg shadow-md transition duration-300">
                            Registrar Cliente
                        </button>
                    </div>
                </form>
            </div>
        </section>
    </main>
</Layout>
