<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Funcionalidad de filtros
        const statusFilter = document.querySelector('select:first-of-type');
        const typeFilter = document.querySelector('select:last-of-type');
        const tableRows = document.querySelectorAll('tbody tr');

        function filterTable() {
            const statusValue = statusFilter?.value || '';
            const typeValue = typeFilter?.value || '';
            
            tableRows.forEach(row => {
                const statusCell = row.querySelector('td:nth-child(6)');
                const typeCell = row.querySelector('td:nth-child(5)');
                
                const statusText = statusCell?.textContent.trim() || '';
                const typeText = typeCell?.textContent.trim() || '';
                
                let showRow = true;
                
                if (statusValue && !statusValue.includes('Todos') && !statusText.includes(statusValue)) {
                    showRow = false;
                }
                
                if (typeValue && !typeValue.includes('Todos') && !typeText.includes(typeValue)) {
                    showRow = false;
                }
                
                row.style.display = showRow ? '' : 'none';
            });
        }

        statusFilter?.addEventListener('change', filterTable);
        typeFilter?.addEventListener('change', filterTable);

        // Funcionalidad de botones de acción
        document.addEventListener('click', function(e) {
            if (e.target.textContent === 'Ver Detalles') {
                e.preventDefault();
                const row = e.target.closest('tr');
                const loteId = row.querySelector('td:nth-child(2)').textContent;
                console.log(`Navegando a detalles del lote ${loteId}`);
                // Aquí se navegaría a la página de detalles del lote
            }
            
            if (e.target.textContent === 'Editar Cliente') {
                e.preventDefault();
                console.log('Abriendo formulario de edición del cliente');
                // Aquí se abriría el formulario de edición
            }
            
            if (e.target.textContent === 'Nuevo Lote') {
                e.preventDefault();
                console.log('Navegando al formulario de nuevo lote');
                // Aquí se navegaría al formulario de nuevo lote
            }
        });

        // Funcionalidad para copiar email al clipboard
        const emailElement = document.querySelector('.text-blue-600');
        emailElement?.addEventListener('click', function() {
            navigator.clipboard.writeText(this.textContent).then(() => {
                // Mostrar feedback visual
                const originalText = this.textContent;
                this.textContent = '✓ Copiado';
                setTimeout(() => {
                    this.textContent = originalText;
                }, 2000);
            });
        });
    });
</script>